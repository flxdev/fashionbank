				div.favourites-right.personal_data
					div.favourites-right_left
						h3 Мои данные
						form
							div.input-wrapp
								p Имя и фамилия
									span *
								input(placeholder = 'Введите имя и фамилию')
							div.input-wrapp
								p E-mail
									span *
								input(placeholder = 'Введите E-mail')
							p Ваш пол
							div
								
								input(type='radio' name='sex' id ='radio-4')
								label(for ='radio-4') Мужской
								input(type='radio' name='sex' id ='radio-5')
								label(for ='radio-5') Мужской
					div.favourites-right_right
						h3 Мои аккаунты

		
		include includes/elements/_go_top
		include includes/_footer
