extends _layout

block title
	title Title of template

block content
	div.wrapp_page
		include includes/_card-h-2
		include includes/_header
		nav
			div.max-width-1300
				ul.breadcrumbs
					li 
						a(href='#') Главная 
					li 
						a(href='#') Личный кабинет

		section
			div.max-width-1300
				div.title-page-wrapp
					h2 Избранные материалы
					
		section
			div.max-width-1300.favourites
				div.favourites-left
					ul.favourites-menu
						li
							a(href='#') Избранные материалы
						li
							a.active(href='#') Персональные данные
						li
							a(href='#') Сменить пароль
						li
							a(href='#') Подписка
						li
							a(href='#') 
								img(src='img/singout.png' alt='')
